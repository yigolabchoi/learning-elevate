# Learning Elevate - Frontend Environment Variables

# API Configuration
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=10000

# Mock API Mode (set to 'false' when connecting to real backend)
VITE_USE_MOCK_API=true

# Authentication
VITE_AUTH_TOKEN_KEY=accessToken
VITE_REFRESH_TOKEN_KEY=refreshToken

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false

# Environment
VITE_APP_ENV=development

# File Upload
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=.pdf,.jpg,.jpeg,.png

# AI Features (for future integration)
# VITE_AI_API_KEY=your_ai_api_key_here
# VITE_AI_MODEL=gpt-4

# Pagination
VITE_DEFAULT_PAGE_SIZE=20
VITE_MAX_PAGE_SIZE=100

